{
  "name": "share-purse-backend",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "drizzle-gen": "npx drizzle-kit generate",
    "migrate:dev": "npx wrangler d1 execute share-purse-db --file=./drizzle/migrations/0000_handy_butterfly.sql --local",
    "migrate:prod": "npx wrangler d1 execute share-purse-db --file=./drizzle/migrations/0000_handy_butterfly.sql --remote",
    "studio": "npx drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.16"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/node": "^22.10.7",
    "wrangler": "^3.101.0"
  }
}
