{
  "name": "share-purse-backend",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "drizzle-gen": "npx drizzle-kit generate",
    "migrate:dev": "for file in ./drizzle/migrations/*.sql; do npx wrangler d1 execute share-purse-db --file=\"$file\" --local; done",
    "migrate:prod": "for file in ./drizzle/migrations/*.sql; do npx wrangler d1 execute share-purse-db --file=\"$file\" --remote; done",
    "studio": "npx drizzle-kit studio",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.16",
    "jose": "^5.9.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@hono/node-server": "^1.13.7",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.0.2",
    "vitest": "^3.0.2",
    "wrangler": "^3.101.0"
  }
}
